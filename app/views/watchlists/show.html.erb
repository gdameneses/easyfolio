<h1>Watchlist</h1>
<%= link_to 'Add coins', new_watchlist_coin_bookmark_path(@watchlist), class: 'btn btn-secondary' %>

<table>
  <% @tickers.each do |ticker| %>
    <% coin = @data.select{ |key| key["symbol"] == ticker }.first.transform_keys(&:to_sym) %>
    <%  %>

    <p><%= coin[:id] %>: price - <%= coin[:current_price] %> | market cap - <%= coin[:market_cap] %> | today's variation - <%= coin[:price_change_percentage_24h] %> <%= link_to '🗑️', watchlist_coin_bookmark_path(@watchlist, ticker), method: :delete %></p>
<% end %>
</table>
