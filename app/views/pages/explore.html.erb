<%= form_tag coin_explore_path, method: :get do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find a coin"
  %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>

<% if @coin %>
  <h1> <%= @ticker %> <%= @coin.price %></h1>
<% end %>
